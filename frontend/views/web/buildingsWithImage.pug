    const pageTitle = `Мої об'єкти`;

block content
  include ../modals/createReport
  include ../modals/createBuilding
  include ../modals/updateBuilding

  .page.buildings
    .container-fluid
      include ../includes/header

      .ih-sorting
        .col-3
          .input-group.ih-sorting-option
            span#status.input-group-text Статус
            select.form-select(aria-describedby='status')
              option(selected='') Усі
              option(value='created') Створено
              option(value='reserved') Зарезервовано
              option(value='inProcess') Обробка звіту
              option(value='approved') Затверджено
              option(value='rejeted') Відхилено

          .input-group
            span#createdAt.input-group-text Дата створення
            select.form-select(aria-describedby='createdAt')
              option(selected='', value='asc') За зростянням
              option(value='desc') За спаданням
        
        .col-3.ih-add-building
          button.btn.btn-primary(data-bs-toggle="modal" data-bs-target="#createBuilding") + Додати об'єкт

      .ih-list-building
